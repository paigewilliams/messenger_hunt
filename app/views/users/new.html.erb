<h1>Sign up</h1>

<%= form_for @user do |f| %>
  <%= f.label "Email" %>
  <%= f.text_field :email %>
  <%= f.label "Password" %>
  <%= f.password_field :password %>
  <%= f.label "Password confirmation" %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Sign up"%>
<% end %>

<%= link_to 'Existing User Sign-in', signin_path %>  
